<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeProject.App.MainPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Select Barcode Types" FontSize="18" FontAttributes="Bold" />
        <CollectionView x:Name="BarcodeTypesCollection" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding IsSelected}" />
                        <Label Text="{Binding Name}" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Scan" Clicked="OnScanClicked" Margin="0,20,0,0" />
        <Label x:Name="ResultLabel" Text="Scan a barcode to see the result." FontSize="16" />
    </VerticalStackLayout>
</ContentPage>